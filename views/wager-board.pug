include scores.pug
.center
 div(class='wagered-status')
 div(class="wager-board")
  div(class='board-segment' id='0')
   a(class='odds-text') #{highestodds}/1
   a(class='answer-text' name='answer-0' value='SMALLER') SMALLER
   if player.wageredStatus
    //- no button
   else if btnsDisabled || smallerWagered
    button(class='segment-btn' disabled) Bet
   else
    button(class='segment-btn' id='segment-btn-smaller' hx-vals=`{"answer": "SMALLER"}` hx-target=`.content` hx-get=`/games/${gameId}/submitbet` hx-prompt='Enter Amount:' hx-include="[name='playerId']") Bet 
  each answerObj, index in answers  
   div(class='board-segment' id=`${index+1}`)
    a(class='odds-text') #{answerObj.odds}
    a(class='answer-text' name=`answer-${index+1}`) #{answerObj.answer}
    if player.wageredStatus
    //- no button
    else if answerObj.wagered || btnsDisabled
     button(class='segment-btn' disabled) Bet
    else
     button(class=`segment-btn` id=`segment-btn-${index+1}` hx-vals=`{"answer": ${answerObj.answer}}` hx-target=`.content` hx-get=`/games/${gameId}/submitbet` hx-prompt='Enter Amount:' hx-include=`[name='playerId']`) Bet
include ids.pug
