include scores.pug
div(class='wagered-status' hx-target='.content' hx-trigger='every 1s' hx-get=`/games/${game.gameId}/wageredcheck` hx-vals=`{"gameId": "${game.gameId}","playerId": "${player.playerId}"}`)
div(class="page wager-board" hx-target='.content' hx-vals=`{"gameId": "${game.gameId}","playerId": "${player.playerId}"}`)
  div(class='board-segment')
    a(class='odds-text') #{game.highestOdds}/1
    a(class='answer-text' name='answer-0' value='SMALLER') SMALLER
    if player.wageredStatus
      //- no button
    else if player.wageredStatus || player.smallerWagered
      button(class='segment-btn' disabled) Bet
    else
      button(class='segment-btn' id='segment-btn-smaller' hx-vals=`{"answer": "SMALLER"}` hx-get=`/games/${game.gameId}/submitbet` hx-prompt='Enter Amount:') Bet 
  each answerObj, index in answers
    div(class='board-segment')
      a(class='odds-text') #{answerObj.odds}/1
      a(class='answer-text' name=`answer-${index+1}`) #{answerObj.displayedAnswer}
      if player.wageredStatus
        //- no button
      else if answerObj.wagered || player.wageredStatus
        button(class='segment-btn' disabled) Bet
      else
        button(class=`segment-btn` id=`segment-btn-${index+1}` hx-vals=`{"answer": "${answerObj.answer}"}` hx-get=`/games/${game.gameId}/submitbet` hx-prompt='Enter Amount:') Bet
  button(class='segment-btn' id='finish-btn' hx-put=`/players/${player.playerId}` hx-vals=`{"wageredStatus: true}`)